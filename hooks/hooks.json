{
  "description": "Hooks for mermaid-collab plugin: server auto-start, phase enforcement, and diagram syncing",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__.*mermaid__.*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/server-check.sh",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/brainstorming-enforce.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__.*mermaid__create_diagram|mcp__.*mermaid__update_diagram",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/sync-diagram-to-doc.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-compact.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
