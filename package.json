{
  "name": "claude-mermaid-collab",
  "version": "5.19.0",
  "type": "module",
  "description": "Browser UI for mermaid-collab with AI-powered interactions and backend server",
  "scripts": {
    "dev": "bun run src/server.ts",
    "dev:ui": "cd ui && bun run dev",
    "mcp": "bun run src/mcp/server.ts",
    "setup": "./setup.sh",
    "setup:start": "./setup.sh --start",
    "build": "cd ui && bun run build",
    "build:all": "bun run build && bun run build:wireframe",
    "build:wireframe": "cd plugins/wireframe && npm run build",
    "build:wireframe:watch": "cd plugins/wireframe && npm run dev",
    "test": "cd ui && bun run test",
    "test:backend": "vitest run",
    "test:wireframe": "cd plugins/wireframe && npm test",
    "postinstall": "cd plugins/wireframe && npm install && cd ui && bun install"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chokidar": "^3.5.3",
    "isomorphic-dompurify": "^2.35.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^23.0.0",
    "marked": "^17.0.1",
    "mermaid": "^10.6.1",
    "mermaid-wireframe": "file:./plugins/wireframe"
  },
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "bun-types": "^1.0.0"
  }
}
